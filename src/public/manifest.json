{
  "manifest_version": 3,
  "name": "Tab Slayer",
  "version": "1.0",
  "description": "Auto-close distracting tabs after a timer.",
  "permissions": ["tabs", "storage", "alarms"],
  "action": {
    "default_popup": "index.html",
    "default_icon": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "icon128.png"
  }
}
